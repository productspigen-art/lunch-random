{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "www" } }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(css|js)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=604800, immutable" }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}

